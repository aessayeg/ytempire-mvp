N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_THIS_N8N_PASSWORD
N8N_HOST=n8n.ytempire.com
N8N_WEBHOOK_URL=https://n8n.ytempire.com
N8N_ENCRYPTION_KEY=GENERATE_N8N_ENCRYPTION_KEY

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# CORS
CORS_ORIGINS=https://ytempire.com,https://www.ytempire.com
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_LIFETIME_HOURS=24

# CSRF
CSRF_COOKIE_SECURE=true
CSRF_COOKIE_HTTPONLY=true

# SSL/TLS
SSL_REDIRECT=true
SSL_CERTIFICATE_PATH=/etc/ssl/certs/ytempire.crt
SSL_KEY_PATH=/etc/ssl/private/ytempire.key

# ==============================================================================
# PERFORMANCE & OPTIMIZATION
# ==============================================================================

# Caching
CACHE_TTL_DEFAULT=3600
CACHE_TTL_TRENDING=900
CACHE_TTL_ANALYTICS=1800
CACHE_TTL_STATIC=86400

# Video Processing
VIDEO_MAX_RESOLUTION=1920x1080
VIDEO_DEFAULT_FPS=30
VIDEO_DEFAULT_BITRATE=5000k
VIDEO_ENCODING_PRESET=medium

# Cost Optimization
MAX_COST_PER_VIDEO=3.0
TARGET_COST_PER_VIDEO=0.5
DAILY_BUDGET_LIMIT=50.0

# AI Service Limits
OPENAI_DAILY_LIMIT=50.0
ELEVENLABS_DAILY_LIMIT=20.0
DALLE_DAILY_LIMIT=10.0

# ==============================================================================
# GPU CONFIGURATION
# ==============================================================================

CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility,video

# ML Pipeline
ML_BATCH_SIZE=32
ML_MAX_WORKERS=4
USE_MIXED_PRECISION=true
USE_COMPILE=true

# ==============================================================================
# BACKUP & DISASTER RECOVERY
# ==============================================================================

BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ytempire-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

FEATURE_MULTI_ACCOUNT_ENABLED=true
FEATURE_GPU_PROCESSING_ENABLED=true
FEATURE_ADVANCED_ANALYTICS_ENABLED=true
FEATURE_WEBHOOK_ENABLED=true
FEATURE_BETA_FEATURES_ENABLED=false

# ==============================================================================
# DEPLOYMENT SETTINGS
# ==============================================================================

# Docker
DOCKER_REGISTRY=registry.ytempire.com
DOCKER_IMAGE_TAG=latest
BUILD_TARGET=production

# Resource Limits
MAX_MEMORY_BACKEND=2G
MAX_MEMORY_FRONTEND=1G
MAX_MEMORY_WORKER=2G
MAX_MEMORY_ML=8G

# Replicas
BACKEND_REPLICAS=3
WORKER_REPLICAS=2
VIDEO_PROCESSOR_REPLICAS=2

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ==============================================================================
# LOGGING
# ==============================================================================

LOG_FORMAT=json
LOG_FILE_PATH=/var/log/ytempire
LOG_MAX_SIZE=100M
LOG_MAX_FILES=10
LOG_COMPRESSION=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=/var/log/ytempire/audit

# ==============================================================================
# TIMEZONE & LOCALE
# ==============================================================================

TIMEZONE=America/Los_Angeles
DEFAULT_LOCALE=en_US
SUPPORTED_LOCALES=en_US,es_ES,fr_FR,de_DE,ja_JP,zh_CN