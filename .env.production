# YTEmpire Production Environment Configuration
# This file contains production settings - KEEP SECURE!
# Copy to .env for production deployment

# ==============================================================================
# CORE SETTINGS
# ==============================================================================

# Environment
ENVIRONMENT=production
NODE_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Application URLs
BACKEND_URL=https://api.ytempire.com
FRONTEND_URL=https://ytempire.com
VITE_API_URL=https://api.ytempire.com

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL Primary
DATABASE_URL=postgresql+asyncpg://ytempire_prod:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/ytempire_production
POSTGRES_USER=ytempire_prod
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=ytempire_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database Pool Settings
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_POOL_SIZE=20
POSTGRES_POOL_OVERFLOW=10
POSTGRES_POOL_TIMEOUT=30

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================

REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_MAX_CONNECTIONS=100

# Celery Configuration
CELERY_BROKER_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0
CELERY_RESULT_BACKEND=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/1
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500
CELERY_WORKER_CONCURRENCY=4

# ==============================================================================
# SECURITY KEYS (Generate with: openssl rand -hex 32)
# ==============================================================================

SECRET_KEY=GENERATE_64_CHAR_RANDOM_STRING_HERE
JWT_SECRET_KEY=GENERATE_ANOTHER_64_CHAR_RANDOM_STRING_HERE
ENCRYPTION_KEY=GENERATE_32_CHAR_ENCRYPTION_KEY_HERE
SESSION_SECRET_KEY=GENERATE_SESSION_SECRET_KEY_HERE

# JWT Settings
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

