# YTEmpire MVP Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development
PROJECT_NAME="YTEmpire MVP"

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
REFRESH_TOKEN_EXPIRE_MINUTES=43200  # 30 days

# Database
POSTGRES_USER=ytempire
POSTGRES_PASSWORD=admin
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ytempire_db
DATABASE_URL=postgresql+asyncpg://ytempire:admin@localhost:5432/ytempire_db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id

# YouTube API Keys (Multiple for quota management)
YOUTUBE_API_KEY=your-youtube-api-key-1

# Stripe Payment
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# AWS (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
S3_BUCKET_NAME=ytempire-storage

# ML Configuration
ML_ENABLED=true
ML_MODELS_PATH=models
AUTOML_RETRAIN_DAYS=7
PERSONALIZATION_UPDATE_DAYS=3

# Monitoring
SENTRY_DSN=your-sentry-dsn-optional
PROMETHEUS_PORT=8001

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_COST_TRACKING=true
ENABLE_GPU_MONITORING=true

# Limits
MAX_VIDEOS_PER_DAY=50
MAX_COST_PER_VIDEO=3.00
MONTHLY_BUDGET_LIMIT=1000.00

# N8N Integration (Optional)
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your-n8n-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json